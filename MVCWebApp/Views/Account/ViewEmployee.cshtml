@model Service.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "ViewEmployee";
}

<h1>Employee Details</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Employees">
            <div class="form-group">
                <label asp-for="Name"> Employee Name</label>
                <input asp-for="Name" class="form-control" readonly/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email Id</label>
                <input asp-for="Email" class="form-control" readonly/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile">Mobile</label>
                <input asp-for="Mobile" class="form-control" readonly/>
                <span asp-validation-for="Mobile"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dob">Date of Birth</label>
                <input asp-for="Dob" class="form-control" type="date" readonly/>
                <span asp-validation-for="Dob"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team">Team</label>
                <input asp-for="Team" class="form-control" list="Teams" readonly/>
                <datalist id="Teams">
                    <option value="Development" />
                    <option value="QA" />
                    <option value="Accounts" />
                </datalist>
                <span asp-validation-for="Team"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doj">Date of Joining</label>
                <input asp-for="Doj" class="form-control" type="date" readonly/>
                <span asp-validation-for="Doj"></span>
            </div>
            <div>
                <button id="closeBtn" type="submit" class="btn btn-primary">Close</button>
            </div>
        </form>
    </div>
</div>

